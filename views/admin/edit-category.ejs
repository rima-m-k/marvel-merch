<%- include('../layouts/adminlayout.ejs'); -%>
<div class="main">
  <h2>EDIT CATEGORY </h2>
  <div class="box1">
    <p class="text-danger fw-bold mx-auto"><%=locals.message %></p>

<form method="post" action="/admin/edit_category/<%= category._id %>" class="mt-3" enctype="multipart/form-data" >
  <div class="mx-auto">
    <label>Category Name</label>
    <input type="text" class="form-control1" id="category" name="categoryname" value="<%= category.categoryname %>" required>
  </div>
  <div class="mx-auto">
<img src="/images/processed_images/<%= category.categoryImage %>" style="width:90px;height:90px;" id="categ_img" class="categ_img">
    <input type="file" class="form-control1" id="category_image" name="category_image" onchange="changeImage(event)" style="border: none;" >
  </div>
  <br>
  <button type="submit" class="btn btn-dark">Edit Category</button>
</form>
</div>
</div>

<script>
  function changeImage(event) {
    document.getElementById('categ_img').src = URL.createObjectURL(event.target.files[0])
  }
</script>