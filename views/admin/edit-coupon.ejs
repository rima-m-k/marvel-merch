<%- include('../layouts/adminlayout.ejs'); -%>

<div class="main">
  <h2>Edit Coupon</h2>
  <div class="box1">
    <form method="post" action="/admin/editcoupon/<%= coupons._id %>">
      <p class="text-danger fw-bold mx-auto"><%=locals.message %></p>

      <div class="product-add">
        Coupon Name
        <input type="text"  value="<%= coupons.couponName %>" class="form-control1" id="coupon_name" name="coupon_name" required />
      </div>

      <div class="product-add">
        Coupon Code
        <input type="text"   value="<%= coupons.couponCode %>" class="form-control1" id="couponCode" name="couponCode" required />
      </div>

      <div class="product-add">
        Discount in %
        <input type="text" value="<%= coupons.discount %>"  class="form-control1" id="discount" name="discount" required />
      </div>

      <div class="product-add">
        Minimum Purchase Amount
        <input type="number" value="<%= coupons.minAmount %>"  class="form-control1" id="minAmount" name="minAmount" required />
      </div>

      <div class="product-add">
        Maximum Purchase Amount
        <input type="number" value="<%= coupons.maxAmount %>"  class="form-control1" id="maxAmount" name="maxAmount" required />
      </div>

      <div class="product-add">
        Starting Date
        <input type="date" value="<%= coupons.startingDate %>"  class="form-control1" id="startingDate" name="startingDate" required />
      </div>
      <div class="product-add">
        Ending Date
        <input type="date" value="<%= coupons.expiryDate %>"  class="form-control1" id="expiryDate" name="expiryDate" required />
      </div>

      <div class="product-add">
        <button type="submit" class="btn btn-dark mt-5">Add Coupon</button>
      </div>
    </form>
  </div>
</div>
